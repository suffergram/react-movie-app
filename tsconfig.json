{
  "compilerOptions": {
    "jsx": "preserve",
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "./",
    "skipLibCheck": true,
    "lib": [
      "es2022",
      "dom"
    ],
    "types": [
      "node",
      "jest",
      "@testing-library/jest-dom"
    ],
    "sourceMap": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src",
    "src/declaration.d.ts",
    ".next/types/**/*.ts",
    "build/types/**/*.ts"
, "src/app"  ],
  "exclude": [
    "node_modules",
    "./lint-staged.config.js",
    "./webpack.config.js"
  ]
}
